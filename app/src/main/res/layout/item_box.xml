<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="196dp"
        app:cardCornerRadius="4dp"
        app:cardElevation="3dp"
        app:cardUseCompatPadding="true"
        app:contentPadding="4dp">


        <LinearLayout
            android:id="@+id/big"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/datelayout"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:weightSum="1">


                <TextView
                    android:id="@+id/te"
                    android:layout_width="match_parent"
                    android:layout_height="18dp"
                    android:layout_gravity="center"
                    android:text="日期"
                    android:textAlignment="center"
                    />

                <TextView
                    android:id="@+id/txtview_date"
                    android:layout_width="match_parent"
                    android:layout_height="54dp"
                    android:gravity="center_vertical"
                    android:text="TextView"
                    android:textAlignment="center"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tvDate2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.46"
                    android:text="TextView"
                    android:textSize="16sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/all"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:weightSum="1">

                <LinearLayout
                    android:id="@+id/boxlayout"
                    android:layout_width="wrap_content"
                    android:layout_height="133dp"
                    android:orientation="horizontal"
                    android:weightSum="1">


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="133dp"
                        android:layout_gravity="center"
                        android:orientation="vertical"
                        android:weightSum="1">

                        <TextView
                            android:id="@+id/textView2"
                            android:layout_width="match_parent"
                            android:layout_height="18dp"
                            android:layout_weight="0.11" />

                        <TextView
                            android:id="@+id/textView5"
                            android:layout_width="26dp"
                            android:layout_height="38dp"
                            android:layout_weight="0.11"
                            android:gravity="center_vertical"
                            android:text="加"
                            android:textAlignment="center" />

                        <TextView
                            android:id="@+id/textView6"
                            android:layout_width="match_parent"
                            android:layout_height="38dp"
                            android:gravity="center_vertical"
                            android:text="包"
                            android:textAlignment="center" />

                        <TextView
                            android:id="@+id/textView4"
                            android:layout_width="match_parent"
                            android:layout_height="38dp"
                            android:gravity="center_vertical"
                            android:text="剩"
                            android:textAlignment="center" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="48dp"
                        android:layout_height="133dp"
                        android:orientation="vertical"
                        android:weightSum="1">


                        <TextView
                            android:id="@+id/textView21"
                            android:layout_width="match_parent"
                            android:layout_height="18dp"
                            android:text="扁盒"
                            android:textAlignment="center" />

                        <TextView
                            android:id="@+id/tv_flat"
                            android:layout_width="match_parent"
                            android:layout_height="38dp"
                            android:gravity="center_vertical"
                            android:text="TextView"
                            android:textAlignment="center"
                            android:textColor="@android:color/holo_green_light" />

                        <TextView
                            android:id="@+id/tv_flat_pack"
                            android:layout_width="match_parent"
                            android:layout_height="38dp"
                            android:gravity="center_vertical"
                            android:text="TextView"
                            android:textAlignment="center"
                            android:textColor="@android:color/holo_orange_dark" />

                        <TextView
                            android:id="@+id/tv_flat_minus"
                            android:layout_width="match_parent"
                            android:layout_height="38dp"
                            android:gravity="center_vertical"
                            android:text="TextView"
                            android:textAlignment="center"
                            android:textColor="@android:color/holo_red_light" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="48dp"
                        android:layout_height="133dp"
                        android:orientation="vertical"
                        android:weightSum="1">

                        <TextView
                            android:id="@+id/textView3"
                            android:layout_width="match_parent"
                            android:layout_height="18dp"
                            android:text="黑盤"
                            android:textAlignment="center" />

                        <TextView
                            android:id="@+id/tv_black"
                            android:layout_width="match_parent"
                            android:layout_height="38dp"
                            android:gravity="center_vertical"
                            android:text="TextView"
                            android:textAlignment="center"
                            android:textColor="@android:color/holo_green_light" />

                        <TextView
                            android:id="@+id/tv_black_pack"
                            android:layout_width="match_parent"
                            android:layout_height="38dp"
                            android:gravity="center_vertical"
                            android:text="TextView"
                            android:textAlignment="center"
                            android:textColor="@android:color/holo_orange_dark" />

                        <TextView
                            android:id="@+id/tv_black_minus"
                            android:layout_width="match_parent"
                            android:layout_height="38dp"
                            android:gravity="center_vertical"
                            android:text="TextView"
                            android:textAlignment="center"
                            android:textColor="@android:color/holo_red_light" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="48dp"
                        android:layout_height="145dp"
                        android:orientation="vertical"
                        android:weightSum="1">

                        <TextView
                            android:id="@+id/textView28"
                            android:layout_width="match_parent"
                            android:layout_height="18dp"
                            android:text="厚底"
                            android:textAlignment="center" />


                        <TextView
                            android:id="@+id/tv_top"
                            android:layout_width="match_parent"
                            android:layout_height="38dp"
                            android:gravity="center_vertical"
                            android:text="TextView"
                            android:textAlignment="center"
                            android:textColor="@android:color/holo_green_light" />

                        <TextView
                            android:id="@+id/tv_top_pack"
                            android:layout_width="match_parent"
                            android:layout_height="38dp"
                            android:gravity="center_vertical"
                            android:text="TextView"
                            android:textAlignment="center"
                            android:textColor="@android:color/holo_orange_dark" />

                        <TextView
                            android:id="@+id/tv_top_minus"
                            android:layout_width="match_parent"
                            android:layout_height="38dp"
                            android:gravity="center_vertical"
                            android:text="TextView"
                            android:textAlignment="center"
                            android:textColor="@android:color/holo_red_light" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="48dp"
                        android:layout_height="133dp"
                        android:orientation="vertical"
                        android:weightSum="1">

                        <TextView
                            android:id="@+id/textView26"
                            android:layout_width="match_parent"
                            android:layout_height="18dp"
                            android:gravity="center_vertical"
                            android:text="cube"
                            android:textAlignment="center" />

                        <TextView
                            android:id="@+id/tv_cube_plus"
                            android:layout_width="match_parent"
                            android:layout_height="38dp"
                            android:gravity="center_vertical"
                            android:text="TextView"
                            android:textAlignment="center"
                            android:textColor="@android:color/holo_green_light" />

                        <TextView
                            android:id="@+id/tv_cube_pack"
                            android:layout_width="match_parent"
                            android:layout_height="38dp"
                            android:gravity="center_vertical"
                            android:text="TextView"
                            android:textAlignment="center"
                            android:textColor="@android:color/holo_orange_dark" />

                        <TextView
                            android:id="@+id/tv_cube_minus"
                            android:layout_width="match_parent"
                            android:layout_height="38dp"
                            android:gravity="center_vertical"
                            android:text="TextView"
                            android:textAlignment="center"
                            android:textColor="@android:color/holo_red_light" />


                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="48dp"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:weightSum="1">

                        <TextView
                            android:id="@+id/textView"
                            android:layout_width="match_parent"
                            android:layout_height="18dp"
                            android:text="總額"
                            android:textAlignment="center" />

                        <TextView
                            android:id="@+id/tv_total"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:text="TextView"
                            android:textAlignment="center"
                            android:textColor="@android:color/holo_blue_dark" />


                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/checker"
                    android:layout_width="328dp"
                    android:layout_height="38dp"
                    android:background="@drawable/co"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <TextView
                        android:id="@+id/textView8"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="Checker: "
                        android:textColor="@android:color/holo_purple" />

                    <TextView
                        android:id="@+id/tv_checkertime"
                        android:layout_width="120dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.56"
                        android:gravity="center_vertical"
                        android:textColor="@android:color/holo_purple" />

                    <TextView
                        android:id="@+id/tv_checkertotal"
                        android:layout_width="94dp"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:textColor="@android:color/holo_purple" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>
